{
    "id": "ibm.devops.services.pipeline.notification.simple",
    "version": 1,
    "name_key": "ExtName",
    "desc_key": "ExtDesc",
    "extension_type": "Build",
    "message_key": "ExtMessage",
    "inputs": [
        {
            "type": "Bluemix",
            "inclusion" : "always"
        }
    ],
    "params": [
        {
            "name": "PHONE",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "PHONE_KEY",
            "desc_key": "PHONE_DESC"
        },
        {
            "name": "TXT",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "TXT_KEY",
            "desc_key": "TXT_DESC"
        },
        {
            "name": "EMAIL",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "EMAIL_KEY",
            "desc_key": "EMAIL_DESC"
        },          
        {
            "name": "MESSAGE",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "MESSAGE_KEY",
            "desc_key": "MESSAGE_DESC"
        }      
    ],
    "outputs": [
        {
            "type": "Artifacts",
            "inclusion" : "always"
        }
    ],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash
export INIT_START_TIME=$(date +\"%s\")
export PHONE=#PHONE#
export TXT=#TXT#
export EMAIL=#EMAIL#
export MESSAGE=#MESSAGE#
export USER_ID=#USER_ID#
export PASSWORD=#PASSWORD#
set +x
set +e
# OSSC line
if [[ $DEBUG -eq 1 ]]; then
    dpkg -l | grep '^ii' > $EXT_DIR/pkglist
fi 
. $EXT_DIR/_init.sh
if [[ $DEBUG -eq 1 ]]; then
    dpkg -l | grep '^ii' > $EXT_DIR/pkglist2
    diff $EXT_DIR/pkglist $EXT_DIR/pkglist2
fi
INIT_END_TIME=$(date +\"%s\")
INIT_EST_TIME=$(($INIT_END_TIME-$INIT_START_TIME))
echo -e \"Init runtime of `date -u -d @\"$INIT_EST_TIME\" +\'%-Mm %-Ss\'`\""
    }
    },
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
    "project_example": "https://hub.jazz.net/pipeline/rjminsha/ice-pipeline_demo",
    "project_contact": "rjminsha@us.ibm.com"
}
